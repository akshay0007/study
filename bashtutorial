https://devhints.io/bash


./next.sh FIRST="FIR" SECOND="SEC" THIRD="THR
#!/bin/bash

for ARGUMENT in "$@"
do

    KEY=$(echo $ARGUMENT | cut -f1 -d=)
    VALUE=$(echo $ARGUMENT | cut -f2 -d=)

    case "$KEY" in
            FIRST)              a=${VALUE} ;;
            SECOND)    b=${VALUE} ;;
            THIRD)    c=${VALUE} ;;
            FOR)    c=${VALUE} ;;
            *)
    esac


done

echo "a = $a"
echo "b = $b"
echo "c = $c"
echo "d = $d"


